<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/corner_layout"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/l_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/epathshala_logo"
            android:paddingLeft="5dp"
            android:text="Event Name"
            android:textColor="@color/button_text_color"
            android:textDirection="firstStrong"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/txt_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/txt_event_name"
            android:paddingLeft="5dp"
            android:text="Date"
            android:textColor="@color/Text_login_titles"
            android:textSize="15sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/l_1"
        android:orientation="vertical"
        tools:ignore="NotSibling,UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_event_thumb"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:contentDescription=""
            android:foregroundGravity="fill"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/epathshala_new_pik"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_event_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_event_thumb"
            android:padding="10dp"
            android:text="Discreption"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlHardcoded"/>

    </RelativeLayout>
</RelativeLayout>

