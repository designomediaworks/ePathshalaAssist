<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fragment_event"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingBottom="5dp"
             android:paddingTop="5dp">

    <TextView
        android:id="@+id/txt_examhistory_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/epathshala_logo"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_timetable_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_btn_bg_color"
                android:paddingLeft="5dp"
                android:text="TimeTable"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listtimetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_layout"
                android:padding="5dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_syllabus_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_deep_teal_20"
                android:paddingLeft="5dp"
                android:text="Syllabus"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listsyllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_layout"
                android:padding="5dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_reportcard_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fees_paid_background"
                android:paddingLeft="5dp"
                android:text="Report Card"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listreportcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_layout"
                android:padding="5dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>